# FBMS Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Configuration
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Supabase Configuration (Production)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Configuration (Staging)
VITE_SUPABASE_URL_STAGING=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY_STAGING=your-staging-anon-key-here

# Payment Integration - GCash
VITE_GCASH_MERCHANT_ID=your-gcash-merchant-id
VITE_GCASH_API_KEY=your-gcash-api-key
VITE_GCASH_ENVIRONMENT=sandbox

# Payment Integration - PayMaya
VITE_PAYMAYA_PUBLIC_KEY=your-paymaya-public-key
VITE_PAYMAYA_SECRET_KEY=your-paymaya-secret-key
VITE_PAYMAYA_ENVIRONMENT=sandbox

# BIR Integration (Optional)
VITE_BIR_API_URL=https://bir-api-endpoint.gov.ph
VITE_BIR_API_KEY=your-bir-api-key

# Email Service (Optional)
VITE_EMAIL_SERVICE_URL=https://your-email-service.com
VITE_EMAIL_API_KEY=your-email-api-key

# SMS Service (Optional)
VITE_SMS_SERVICE_URL=https://your-sms-service.com
VITE_SMS_API_KEY=your-sms-api-key

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id

# Error Tracking (Optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
VITE_ENABLE_ENHANCED_FEATURES=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_BARCODE_SCANNING=true
VITE_ENABLE_MULTI_LOCATION=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_PAYMENTS=true
VITE_SKIP_AUTH=false

# Deployment Configuration
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_AUTH_TOKEN=your-netlify-auth-token

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Database Configuration (for local development)
DATABASE_URL=postgresql://username:password@localhost:5432/fbms_dev
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
CORS_ORIGIN=https://yourdomain.com

# File Storage
VITE_STORAGE_BUCKET=your-storage-bucket
VITE_CDN_URL=https://your-cdn-url.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Monitoring
HEALTH_CHECK_INTERVAL=300
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,fil

# Business Configuration
VITE_DEFAULT_CURRENCY=PHP
VITE_DEFAULT_TIMEZONE=Asia/Manila
VITE_VAT_RATE=0.12
VITE_BUSINESS_TYPE=retail

# Mobile Configuration
VITE_PWA_ENABLED=true
VITE_OFFLINE_STORAGE_LIMIT=50MB
VITE_SYNC_INTERVAL=30000